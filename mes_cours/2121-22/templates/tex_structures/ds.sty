% #1 number of lines to reply
% #2 answer to the question, centered
\newcommand{\answerbox}[2]{
	\ifprintanswers
		\begin{center}
			\color{DarkRed}
			\textbf{\textit{#2}}
		\end{center}

	\else
	\begin{tcolorbox}[breakable, enhanced]
		\vspace{7pt}
		\multido{}{#1}{\noindent\makebox[\linewidth]{\dotfill}\endgraf\vspace{5pt}}% ... dotted lines ...
	\end{tcolorbox}
	\fi
}



